<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/ivTopDivider"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dirPicker_divHeight"
    android:layout_marginLeft="@dimen/dirPicker_divHMargin"
    android:layout_marginRight="@dimen/dirPicker_divHMargin"
    android:visibility="invisible"
    app:srcCompat="@color/dirPicker_divider"
    tools:ignore="ContentDescription"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/partInfo_layoutVMargin"
    android:layout_marginLeft="@dimen/partInfo_layoutHMargin"
    android:layout_marginRight="@dimen/partInfo_layoutHMargin"
    android:layout_marginTop="@dimen/partInfo_layoutVMargin">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:ignore="UseCompoundDrawables">

      <TextView
        android:id="@+id/tvPartId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/partInfo_textColorMain"
        android:textSize="@dimen/partInfo_textSizeMain"
        android:textStyle="bold"/>

      <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/partInfo_iconSize"
        android:layout_height="@dimen/partInfo_iconSize"
        android:layout_margin="@dimen/partInfo_iconMargin"
        tools:ignore="ContentDescription"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/tvName"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:layout_marginLeft="@dimen/partInfo_nameMargin"
          android:layout_marginStart="@dimen/partInfo_nameMargin"
          android:textColor="@color/partInfo_textColorMain"
          android:textSize="@dimen/partInfo_textSizeMain"/>

        <TextView
          android:id="@+id/tvVersion"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginLeft="@dimen/partInfo_nameMargin"
          android:layout_marginRight="@dimen/partInfo_nameMargin"
          android:textColor="@color/partInfo_textColorMain"
          android:textSize="@dimen/partInfo_textSizeMain"
          android:gravity="end"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/partInfo_nameMargin"
        android:layout_marginStart="@dimen/partInfo_nameMargin"
        android:layout_marginTop="15dp">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:minWidth="120dp">

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_power_yellow_24dp"
            tools:ignore="ContentDescription"/>

          <TextView
            android:id="@+id/tvPowerGen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/partInfo_nameMargin"
            android:layout_marginStart="@dimen/partInfo_nameMargin"
            android:textColor="@color/colorFull"
            android:textSize="@dimen/partInfo_textSizeMain"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="@string/slashDivider"
            android:textColor="@color/partInfo_textColorMain"
            android:textSize="@dimen/partInfo_textSizeMain"/>

          <TextView
            android:id="@+id/tvPowerUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorEmpty"
            android:textSize="@dimen/partInfo_textSizeMain"/>
        </LinearLayout>

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_fuel_yellow_24dp"
          tools:ignore="ContentDescription"/>

        <TextView
          android:id="@+id/tvFuel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minWidth="90dp"
          android:layout_marginLeft="@dimen/partInfo_nameMargin"
          android:layout_marginStart="@dimen/partInfo_nameMargin"
          android:textColor="@color/partInfo_textColorMain"
          android:textSize="@dimen/partInfo_textSizeMain"/>

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_cargo_yellow_24dp"
          tools:ignore="ContentDescription"/>

        <TextView
          android:id="@+id/tvCargo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/partInfo_nameMargin"
          android:layout_marginStart="@dimen/partInfo_nameMargin"
          android:minWidth="40dp"
          android:textColor="@color/partInfo_textColorMain"
          android:textSize="@dimen/partInfo_textSizeMain"/>

        <ImageView
          android:id="@+id/ivNaviComp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_nav_off_yellow_24dp"
          tools:ignore="ContentDescription"/>

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/dirPicker_divHeight"
    android:layout_marginLeft="@dimen/dirPicker_divHMargin"
    android:layout_marginRight="@dimen/dirPicker_divHMargin"
    app:srcCompat="@color/dirPicker_divider"
    tools:ignore="ContentDescription"/>

</LinearLayout>