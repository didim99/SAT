<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/ivTopDivider"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actSbx_divHeight"
    android:layout_marginLeft="@dimen/actSbx_divHMargin"
    android:layout_marginRight="@dimen/actSbx_divHMargin"
    android:visibility="invisible"
    app:srcCompat="@color/dirPicker_divider"
    tools:ignore="ContentDescription"/>

  <TextView
    android:id="@+id/tvName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:textSize="@dimen/actSbx_textSizeMain"/>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/actSbx_divHeight"
    android:layout_marginLeft="@dimen/actSbx_divHMargin"
    android:layout_marginRight="@dimen/actSbx_divHMargin"
    app:srcCompat="@color/dirPicker_divider"
    tools:ignore="ContentDescription"/>

</LinearLayout>