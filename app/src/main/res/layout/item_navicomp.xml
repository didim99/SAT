<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/ivTopDivider"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actSbx_divHeight"
    android:layout_marginLeft="@dimen/actSbx_divHMargin"
    android:layout_marginRight="@dimen/actSbx_divHMargin"
    android:visibility="invisible"
    app:srcCompat="@color/dirPicker_divider"
    tools:ignore="ContentDescription"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/actSbx_layoutMargin">

    <TextView
      android:id="@+id/tvLabel"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:textSize="@dimen/actSbx_textSizeMain"/>

    <TextView
      android:id="@+id/tvCenter"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="7"
      android:gravity="end"
      android:textSize="@dimen/actSbx_textSizeMain"/>
  </LinearLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/actSbx_divHeight"
    android:layout_marginLeft="@dimen/actSbx_divHMargin"
    android:layout_marginRight="@dimen/actSbx_divHMargin"
    app:srcCompat="@color/dirPicker_divider"
    tools:ignore="ContentDescription"/>

</LinearLayout>