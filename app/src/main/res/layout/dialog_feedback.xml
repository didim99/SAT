<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
              android:orientation="vertical"
             android:paddingTop="@dimen/dialogView_Padding"
             android:paddingLeft="@dimen/dialogView_PaddingLarge"
             android:paddingRight="@dimen/dialogView_PaddingLarge">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/diaFeedback_developer"
    android:textSize="@dimen/dialogView_textSizeMain"/>

  <TextView
    android:id="@+id/tvDeveloper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dialogView_PaddingLarge"
    android:layout_marginStart="@dimen/dialogView_PaddingLarge"
    android:textSize="@dimen/dialogView_textSizeMain"
    android:textColor="@drawable/text_link"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/diaFeedback_group"
    android:textSize="@dimen/dialogView_textSizeMain"/>

  <TextView
    android:id="@+id/tvGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dialogView_PaddingLarge"
    android:layout_marginStart="@dimen/dialogView_PaddingLarge"
    android:textSize="@dimen/dialogView_textSizeMain"
    android:textColor="@drawable/text_link"/>

</LinearLayout>