<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/infoDialog_layoutPadding">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/diaSbxInfo_saveIdRange"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_name"/>

    <TextView
      android:id="@+id/tvSaveIdRange"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/infoDialog_valueTextMargin"
      android:layout_marginStart="@dimen/infoDialog_valueTextMargin"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_value"/>

    <TextView
      android:id="@+id/tvPosition"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/diaSbxInfo_centerPosition"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_name"/>

    <TextView
      android:id="@+id/tvCenterPos"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/infoDialog_valueTextMargin"
      android:layout_marginStart="@dimen/infoDialog_valueTextMargin"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_value"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/diaSbxInfo_size"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_name"/>

    <TextView
      android:id="@+id/tvSize"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/infoDialog_valueTextMargin"
      android:layout_marginStart="@dimen/infoDialog_valueTextMargin"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_value"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/diaSbxInfo_movement"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_name"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/infoDialog_valueTextMargin"
      android:layout_marginStart="@dimen/infoDialog_valueTextMargin"
      android:layout_gravity="bottom"
      tools:ignore="UseCompoundDrawables">

      <TextView
        android:id="@+id/tvMovement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/infoDialog_textSizeMain"
        android:textColor="?clr_infoDialog_value"/>

      <ImageView
        android:id="@+id/ivMovement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="?ic_cross"
        tools:ignore="ContentDescription"/>

      <TextView
        android:id="@+id/tvRotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/infoDialog_textSizeMain"
        android:textColor="?clr_infoDialog_value"/>

      <ImageView
        android:id="@+id/ivRotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:srcCompat="?ic_cross"
        tools:ignore="ContentDescription"/>
    </LinearLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/diaSbxInfo_modCount"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_name"/>

    <TextView
      android:id="@+id/tvModCount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/infoDialog_valueTextMargin"
      android:layout_marginStart="@dimen/infoDialog_valueTextMargin"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_value"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/diaSbxInfo_minVer"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_name"/>

    <TextView
      android:id="@+id/tvMinVer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/infoDialog_valueTextMargin"
      android:layout_marginStart="@dimen/infoDialog_valueTextMargin"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_value"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/diaSbxInfo_launchTime"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_name"/>

    <TextView
      android:id="@+id/tvLaunchTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/infoDialog_valueTextMargin"
      android:layout_marginStart="@dimen/infoDialog_valueTextMargin"
      android:textSize="@dimen/infoDialog_textSizeMain"
      android:textColor="?clr_infoDialog_value"/>

  </LinearLayout>
</ScrollView>