<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dialogView_Padding">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:ignore="UseCompoundDrawables">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_power_yellow_24dp"
        tools:ignore="ContentDescription"/>

      <TextView
        android:id="@+id/tvPower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/HelpDialog_iconPadding"
        android:layout_marginStart="@dimen/HelpDialog_iconPadding"
        android:textSize="@dimen/HelpDialog_textSize_main"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:ignore="UseCompoundDrawables">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_fuel_yellow_24dp"
        tools:ignore="ContentDescription"/>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/HelpDialog_itemVMargin"
        android:layout_marginLeft="@dimen/HelpDialog_iconPadding"
        android:layout_marginStart="@dimen/HelpDialog_iconPadding"
        android:text="@string/HelpDialog_fuel"
        android:textSize="@dimen/HelpDialog_textSize_main"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:ignore="UseCompoundDrawables">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_cargo_yellow_24dp"
        tools:ignore="ContentDescription"/>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/HelpDialog_itemVMargin"
        android:layout_marginLeft="@dimen/HelpDialog_iconPadding"
        android:layout_marginStart="@dimen/HelpDialog_iconPadding"
        android:text="@string/HelpDialog_cargo"
        android:textSize="@dimen/HelpDialog_textSize_main"/>
    </LinearLayout>

    <TextView
      android:id="@+id/tvSaveCargo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="36dp"
      android:layout_marginStart="36dp"
      android:textSize="@dimen/HelpDialog_textSize_main"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:ignore="UseCompoundDrawables">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_nav_yellow_24dp"
        tools:ignore="ContentDescription"/>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/HelpDialog_itemVMargin"
        android:layout_marginLeft="@dimen/HelpDialog_iconPadding"
        android:layout_marginStart="@dimen/HelpDialog_iconPadding"
        android:text="@string/HelpDialog_nav"
        android:textSize="@dimen/HelpDialog_textSize_main"/>
    </LinearLayout>

  </LinearLayout>

</ScrollView>